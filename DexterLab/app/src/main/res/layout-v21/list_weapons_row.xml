<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:transitionName="weaponImg"
        android:id="@+id/img_weapon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/weapon"/>

    <TextView
        android:transitionName="weaponName"
        android:id="@+id/tv_weapon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_weapon"
        android:layout_toEndOf="@+id/img_weapon"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

</RelativeLayout>