<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_margins">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="btn_padding" parent="btn_margins">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="btn_margin_padding" parent="btn_padding">
    </style>

    <style name="btn_danger" parent="btn_margin_padding">
        <item name="android:background">@drawable/btn_danger</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_info" parent="btn_margin_padding">
        <item name="android:background">@drawable/btn_info</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>